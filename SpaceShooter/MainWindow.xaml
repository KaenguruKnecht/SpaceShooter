<Window x:Class="SpaceShooter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpaceShooter"
        mc:Ignorable="d"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid >
        <Canvas x:Name="SpaceCanvas" Background="Black"></Canvas>
        <TextBlock x:Name="TextBlockLeben" HorizontalAlignment="Left" VerticalAlignment="Top" Height="50" Width="200" Text="Leben: 3" Foreground="Red" FontSize="35"></TextBlock>
        <TextBlock x:Name="TextBlockScore" HorizontalAlignment="Right" VerticalAlignment="Top" Height="50" Width="200" Text="Score: 0" Foreground="Red" FontSize="35"></TextBlock>
    </Grid>
    
</Window>
